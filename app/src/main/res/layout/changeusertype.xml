<?xml version="1.0" encoding="utf-8"?>



    <HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/scrollHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/spacer_size_5"
        android:foregroundGravity="center_horizontal"
        android:fillViewport="true">

    <ScrollView
        android:id="@+id/scrollVertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:foregroundGravity="center_horizontal">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/spacer_size_5"
            android:id="@+id/changeusertype_linearlayout"
            android:scaleX="1"
            android:scaleY="1"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User Name"
                android:id="@+id/userLoggedInName"
                android:gravity="right"
                android:foregroundGravity="right"
                android:layout_gravity="right"
                    android:textStyle="bold"         android:layout_marginRight="@dimen/spacer_size_20"/>  <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/app_name"
        android:id="@+id/addUser_page_title"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/holo_blue_dark"
        android:textColorHighlight="@android:color/holo_blue_light"
        android:textSize="@dimen/spacer_size_35"
        android:textStyle="bold|italic"
        android:typeface="serif"
        android:foregroundGravity="center_horizontal"
        android:layout_gravity="center_horizontal" />
    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"

        android:layout_alignParentStart="true"
        android:layout_margin="@dimen/spacer_size_5"
        android:id="@+id/addUserButtonsLayout"
        android:layout_gravity="center_horizontal"
        android:padding="@dimen/spacer_size_5">
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Change User Type"
                android:id="@+id/change_userType_page_desc"
                android:layout_centerHorizontal="true"
                android:textColor="@android:color/holo_blue_dark"
                android:textColorHighlight="@android:color/holo_blue_light"
                android:textSize="@dimen/spacer_size_15"
                android:textStyle="bold|italic"
                android:typeface="serif"
                android:layout_span="2"
                android:gravity="center_horizontal" />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User Name"
                android:id="@+id/textView16"
                android:layout_column="0" />

            <EditText
                android:id="@+id/changeUserTypeName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:layout_column="1"
                android:layout_marginRight="@dimen/spacer_size_5">

                <requestFocus />
            </EditText>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Type"
                android:id="@+id/textView18a"
                android:layout_column="0" />

            <Spinner
                style="@style/dropDownSpinner"

                android:layout_column="1"
                android:id="@+id/newUserType"
                android:layout_centerHorizontal="true"
                android:divider="@drawable/list_divider"

                android:headerDividersEnabled="false"
                android:footerDividersEnabled="true"
                android:clickable="true"
                android:focusable="false"
                android:spinnerMode="dialog"
                android:layout_gravity="left"

                android:minWidth="@dimen/spacer_size_5"
                android:entries="@array/user_type"
                android:contextClickable="true"
                android:background="@android:color/transparent"
                android:paddingBottom="@dimen/spacer_size_5" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/cancel_change_record"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Cancel"
                android:onClick="hideChangeUserType"
                android:padding="@dimen/spacer_size_5" />

            <Button
                android:id="@+id/change_record"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Change User Type"
                android:layout_column="1"
                android:onClick="changeUserTypeNow"
                android:padding="@dimen/spacer_size_5" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </TableRow>
    </TableLayout>

</LinearLayout>
   </ScrollView></HorizontalScrollView>