<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.junaid.foodster">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Signup" />
        <activity android:name=".BusinessListActivity"></activity>

        <activity
            android:name=".AddUserActivity"
            android:configChanges="orientation|screenSize"
            ></activity>
        <activity
            android:name=".ChangeUserPasswordActivity"
            android:configChanges="orientation|screenSize"
            ></activity>
         <activity
            android:name=".ChangeUserTypeActivity"
            android:configChanges="orientation|screenSize"
            ></activity>
        <activity
            android:name=".Login"
            android:configChanges="orientation|screenSize"
            ></activity>
        <activity
            android:name=".YelpSearchActivity"
            android:configChanges="orientation|screenSize"
            ></activity>
        <activity
            android:name=".ReviewListActivity"
            android:configChanges="orientation|screenSize"
            ></activity>
    <activity
        android:name=".LocalReviewActivity"
        android:configChanges="orientation|screenSize"
        ></activity>    </application>
</manifest>